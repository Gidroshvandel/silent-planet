<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linerBoss"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/space_texture"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_humans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_s"
            tools:text="@string/humans" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_s"
            tools:text="@string/pirates" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_robots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_s"
            tools:text="@string/robots" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_aliens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding_small"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_s"
            tools:text="@string/aliens" />

    </LinearLayout>


    <com.silentgames.silent_planet.view.SurfaceGameView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fillViewport="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/panel"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/panel"
                android:orientation="vertical"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/select_object_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:weightSum="1"
                    tools:src="@tools:sample/avatars" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_entity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="Test Name" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/panel"
                android:orientation="vertical"
                android:weightSum="1">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    tools:ignore="UselessParent">

                    <TableRow>

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/crystal" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/image_crystal_text"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white"
                            tools:text="12" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/panel"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_m"
                tools:text="Description" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/take_crystal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

